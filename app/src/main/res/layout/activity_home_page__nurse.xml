<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_homepage_nurse"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/purple"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/fifteen_dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="3dp"
                android:text="Welcome!"
                android:textColor="@color/purewhite"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWelcome"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textColor="@color/purewhite"
                android:textSize="@dimen/sixteen_sp" />

            <ImageButton
                android:id="@+id/imgBtnLogoutNurse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/logout_white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_view_shape"
            android:paddingLeft="@dimen/eight_dp"
            android:paddingTop="@dimen/five_dp"
            android:paddingRight="@dimen/eight_dp"
            android:paddingBottom="@dimen/five_dp">

            <EditText
                android:id="@+id/etSearchNurse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ 1234567890"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/search_by_name_or_patient_id"
                android:padding="@dimen/five_dp"
                android:singleLine="true"
                android:textColor="@color/heading_purple"
                android:textCursorDrawable="@drawable/text_cursor_color"
                android:textSize="@dimen/fourteen_sp" />

            <LinearLayout
                android:id="@+id/llBtnSearchNurse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/five_dp"
                    android:src="@drawable/search_grey" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btm_navigation_view"
        android:layout_below="@+id/ll_homepage_nurse"
        android:background="@drawable/edit_text_background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_patient_nurse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llNoData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/no_patient_list"
                android:textColor="@color/heading_purple"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNetworkError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/slow_network_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:text="@string/network_error"
                android:textColor="@color/heading_purple"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_homepage_nurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btm_navigation_view"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fifteen_dp"
        android:background="@color/orange"
        android:backgroundTint="@color/orange"
        android:src="@drawable/add"
        app:elevation="3dp"
        app:maxImageSize="50dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btm_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/purewhite"
        app:menu="@menu/navigation_nurse" />


</RelativeLayout>