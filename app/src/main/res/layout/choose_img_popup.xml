<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purewhite"
        app:cardCornerRadius="@dimen/eight_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purewhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tweenty_dp"
                android:layout_marginBottom="@dimen/tweenty_dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center|top"
                android:padding="@dimen/ten_dp"
                android:text="How do you want to upload prescription?"
                android:textColor="@color/black_shade_1"
                android:textSize="@dimen/sixteen_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purewhite"
                android:orientation="horizontal"
                android:padding="@dimen/tweenty_dp">

                <Button
                    android:id="@+id/btn_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/gallery"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/purewhite"
                    android:textSize="@dimen/sixteen_sp" />

                <Button
                    android:id="@+id/btn_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_shape"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/camera"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/purewhite"
                    android:textSize="@dimen/sixteen_sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>