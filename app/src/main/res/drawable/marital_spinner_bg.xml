<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FAFAFA" />
                    <stroke android:width="1dp" android:color="#B1B1B1" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp"></padding>
                </shape>
            </item>
            <item android:right="20dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/dropdown" />
            </item>
        </layer-list>
    </item>
</selector>