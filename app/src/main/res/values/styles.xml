<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purewhite</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/heading_purple</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/heading_purple</item>
    </style>

    <style name="bottom_navigation_style" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="tabTextAppearancePatientDetails" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@color/black_shade_2</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="personal_info_title">
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingBottom">@dimen/five_dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="personal_info_value">
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingBottom">@dimen/five_dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="editPatientDetailsEditText">
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingBottom">@dimen/five_dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/eight_dp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_color</item>
        <item name="android:layout_marginTop">@dimen/three_dp</item>
    </style>

    <style name="edit_patient_info_title">
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:fontFamily">@font/helveticaneue_medium</item>
        <item name="android:paddingBottom">@dimen/five_dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="edit_patient_info_value">
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:fontFamily">@font/helveticaneue_light</item>
        <item name="android:paddingBottom">@dimen/five_dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="radioButtonEditPatient">
        <item name="android:layout_weight">1</item>
        <item name="android:buttonTint" tools:targetApi="lollipop">@color/orange</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:textColor">@color/black_shade_1</item>
    </style>

    <style name="marital_status_dropdown">
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="surgery_dropdown">
        <item name="android:textSize">@dimen/tweenty_sp</item>
        <item name="android:textColor">@color/heading_purple</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MyThemeOverlay">
        <item name="android:colorAccent">@color/orange</item>
    </style>

    <style name="toolbar_title">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="edit_disease_title">
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edit_disease_value">
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">@dimen/eight_dp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_color</item>
    </style>

    <style name="illness_doc_title">
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/twelve_sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/five_dp</item>
    </style>
    <style name="upload_docs_text">
        <item name="android:textSize">@dimen/seventeen_sp</item>
        <item name="android:textColor">@color/black_shade_2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:padding">@dimen/tweenty_dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/purewhite</item>
        <item name="android:textColorPrimary">@color/purewhite</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="new_patient_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_weight">6</item>
    </style>
    <style name="new_patient_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black_shade_1</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_weight">4</item>
        <item name="android:padding">@dimen/eight_dp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_color</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_marginTop">@dimen/five_dp</item>
    </style>
<style name="profile_texts">
    <item name="android:textSize">@dimen/fourteen_sp</item>
    <item name="android:textColor">@color/dark_grey</item>
    <item name="android:fontFamily">@font/roboto_regular</item>
</style>
</resources>
